{
    "id": "fk-state",
    "className": "State",
    "name": "State",
    "config": {
        "isConfig": true,
        "category": "config",
        "fields": [
            { "id": "name", "label": "Name", "type": "text", "required": true, "default": ""},
            { "id": "source", "label": "Type", "type": "enum", "values": ["Memory", "Mqtt state", "Mqtt event"], "default": "Memory"},
            { "id": "mqtt", "label": "Mqtt server", "type": "text", "required": false, "dataType": "fk-mqtt"},
            { "id": "mqtt_topic", "label": "Mqtt topic", "type": "text", "default": ""},
            { "id": "mqtt_type", "label": "Mqtt type", "type": "enum", "values": ["Single", "Double - left", "Double - right"], "default": "Single"},
            { "id": "mqtt_event_type", "label": "Mqtt event type", "type": "enum", "values": ["Motion", "Click", "Double click"], "default": "Motion"},

            { "id": "mode", "label": "Mode", "type": "enum", "values": ["Boolean", "Timer", "Counter", "List"], "default": "Boolean"},
            { "id": "timeout", "label": "Timeout (s)", "type": "text", "default": "180"},
            { "id": "allowResetTimer", "label": "Allow reset timer", "type": "checkbox", "default": "false"},

            { "id": "initialState", "label": "Initial state", "type": "text", "default": "false"},
            { "id": "toggle", "label": "Toggle", "type": "checkbox", "default": "false"}
        ],
        "onSave": "function () { this.name = $('#node-input-name').text(); }",
        "onEdit": "function() { $('#node-config-input-source').change(function(){ if ($('#node-config-input-source').val() == 'Memory') $('#node-config-input-mqtt').hide(); else $('#node-config-input-mqtt').show(); }); }"
    },
    "help": "Help..."
}